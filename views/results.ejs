<%- include('partials/header.ejs') %>


<form class="results-form" action="/results" method="GET"> 
  <div class="ui stackable centered grid">
    <div class="four wide column">
      <div class="ui fluid large transparent input results-input">
        <input type="text" placeholder="Start" name="start" value="<%= startLocation %>">
      </div>
    </div>
    <div class="four wide column">
      <div class="ui fluid large transparent input results-input">
        <input type="text" placeholder="End" name="end" value="<%= endLocation %>">
      </div>
    </div>
    <div class="two wide column">
      <button class="ui large button" type="Submit">Search</button>
    </div>
  </div>
</form>


<div class="ui four column grid">
  <% for (var location of data) { %>
    <div class="column">
      <div class="ui card">
        <div class="content">
          <div class="header"><%= location.name %></div>
          <div class="meta"><%= location.weatherStats.summary %></div>
          <div class="ui statistic">
            <div class="value"><%= location.weatherStats.temperatureMax %>&deg;</div>
            <div class="label">High</div>
          </div>
          <div class="ui statistic">
            <div class="value"><%= location.weatherStats.temperatureMin %>&deg;</div>
            <div class="label">Low</div>
          </div>
          <div><%= location.weatherStats.precipType %>: <%= location.weatherStats.precipProb %>%</div>
        </div>
      </div>
    </div>
  <% } %> 
</div>


<%- include('partials/footer.ejs') %>
